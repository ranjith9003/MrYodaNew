<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Detailed COD Flow Suite" verbose="2">
    <test name="Detailed COD Steps" preserve-order="true">
        <classes>
            <class name="com.mryoda.diagnostics.api.tests.UserCreateAPITest"/>
            <class name="com.mryoda.diagnostics.api.tests.LoginAPITest"/>
            <!-- AddToCart is needed to have items in cart? DetailedCODFlowTest checks cart at step 2. 
                 It assumes items might be there or it adds Address&Slot at step 3. 
                 But step 2 verifies price. If cart is empty, price is 0. 
                 Looking at CreateOrderCODAPITest, it runs AddToCartAPITest before itself.
                 I should include AddToCartAPITest. 
                 And GlobalSearchAPITest (needed for AddToCart). 
                 And BrandAPITest.
                 Basically the whole setup stack. 
            -->
            <class name="com.mryoda.diagnostics.api.tests.LocationAPITest"/>
            <class name="com.mryoda.diagnostics.api.tests.BrandAPITest"/>
            <class name="com.mryoda.diagnostics.api.tests.GlobalSearchAPITest"/>
            <class name="com.mryoda.diagnostics.api.tests.AddToCartAPITest"/>
            
            <!-- Finally the Detailed Flow -->
            <class name="com.mryoda.diagnostics.api.tests.DetailedCODFlowTest"/>
        </classes>
    </test>
</suite>
